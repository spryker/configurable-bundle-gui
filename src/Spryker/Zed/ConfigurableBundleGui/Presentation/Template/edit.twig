{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Template details' %}

{% block section_title %}
    {{ 'Edit Configurable Bundle Template' | trans }}
{% endblock %}

{% block head_title %}
    {{ widget_title | trans }}
{% endblock %}

{% block action %}
    {{ backActionButton('/configurable-bunle-gui', 'Back to Template list' | trans) }}
    {{ createActionButton('/configurable-bunle-gui/slots/create', 'Add Slot' | trans) }}
{% endblock %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' %}
        {% block widget_content %}
            {{ tabs(tabs, {
                form: form,
                currentLocale: currentLocale,

            }) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
