{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Delete Configurable Bundle Template' | trans ~ ' #' ~ configurableBundleTemplateTransfer.idConfigurableBundleTemplate %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {{ backActionButton(app.request.headers.get('referer'), 'Back' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}
            <p>{{ 'Are you sure you want to delete template' | trans }}: <b>{{ configurableBundleTemplateTransfer.translations[0].name }}</b>?</p>
            <div>
                <a href="{{ app.request.headers.get('referer') }}" class="btn btn-back">{{ 'Cancel' | trans }}</a>
                {{ form_start(deleteForm, {
                    'action': url(
                        '/configurable-bundle-gui/template/delete',
                        {'id-configurable-bundle-template': configurableBundleTemplateTransfer.idConfigurableBundleTemplate}
                    )
                }) }}
                    <input type="submit" class="btn btn-danger safe-submit" value="{{ 'Delete Template' | trans }}"/>
                {{ form_end(deleteForm) }}
            </div>
        {% endblock %}

    {% endembed %}

{% endblock %}
