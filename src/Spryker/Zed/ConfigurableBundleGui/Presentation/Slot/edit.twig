{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Slot details' %}

{% block section_title %}
    {{ 'Edit Configurable Bundle Template Slot' | trans ~ ': ' ~ form.vars.data.idConfigurableBundleTemplateSlot }}
{% endblock %}

{% block head_title %}
    {{ widget_title | trans }}
{% endblock %}

{% block action %}
    {{ backActionButton(url('/configurable-bundle-gui/template/edit', {'id-configurable-bundle-template' : form.vars.data.fkConfigurableBundleTemplate }),'Back to Configurable Bundle Template Edit page' | trans) }}
{% endblock %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' %}
        {% block widget_content %}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            {% set tips = 'General tab tip' %}

            {{ tabs(tabs, {
                form: form,
                currentLocale: currentLocale,
                tips: tips
            }) }}

            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
